  "4-compound-text-index": {
    "request": {
      "createIndexes": "books",
      "indexes": [
        {
          "key": {
            "title": "text",
            "summary": "text"
          },
          "name": "title_summary_text_index"
        }
      ],
      "$db": "{{.Database}}"
    },
    "response": {
      "numIndexesBefore": {
        "$numberInt": "1"
      },
      "numIndexesAfter": {
        "$numberInt": "2"
      },
      "createdCollectionAutomatically": false,
      "ok": {
        "$numberDouble": "1.0"
      }
    }
  },
  "5-relevance-score": {
