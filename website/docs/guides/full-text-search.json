{
  "1-create-text-index": {
    "request": {
      "createIndexes": "books",
      "indexes": [
        {
          "key": {
            "summary": "text"
          },
          "name": "summary_text_index"
        }
      ],
      "$db": "{{.Database}}"
    },
    "response": {
      "numIndexesBefore": {
        "$numberInt": "1"
      },
      "numIndexesAfter": {
        "$numberInt": "2"
      },
      "createdCollectionAutomatically": false,
      "ok": {
        "$numberDouble": "1.0"
      }
    }
  },
  "2-basic-text-search": {
    "request": {
      "find": "books",
      "filter": {
        "$text": {
          "$search": "romance"
        }
      },
      "projection": {
        "title": {
          "$numberInt": "1"
        },
        "authors": {
          "$numberInt": "1"
        },
        "summary": {
          "$numberInt": "1"
        }
      },
      "$db": "{{.Database}}"
    },
    "response": {
      "cursor": {
        "id": {
          "$numberLong": "0"
        },
        "ns": "{{.Database}}.books",
        "firstBatch": [
          {
            "_id": "pride_prejudice_1813",
            "title": "Pride and Prejudice",
            "authors": [
              {
                "name": "Jane Austen",
                "nationality": "British"
              }
            ],
            "summary": "This novel portrays the life and challenges of Elizabeth Bennet as she navigates societal expectations, class prejudice, and romance. The book explores the evolving relationship between Elizabeth and Mr. Darcy, shedding light on the virtues of understanding and self-awareness."
          }
        ]
      },
      "ok": {
        "$numberDouble": "1.0"
      }
    }
  },
  "3-drop-text-index": {
    "request": {
      "dropIndexes": "books",
